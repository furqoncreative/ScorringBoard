<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    tools:context="camp.bso.inf.scorringboard.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/biru"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:src="@drawable/persib"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.30"
            android:textColor="#fff"
            android:text="PERSIB BANDUNG" />

        <Button
            android:id="@+id/btn_details_persib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.00"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:theme="@style/orange"
            android:text="Details"
            />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ad2929"
        android:layout_gravity="center"
        android:text="VS" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_details_persija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_weight="0.0"
            android:layout_marginLeft="20dp"
            android:theme="@style/biru"
            android:text="Details"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:textAlignment="textEnd"
            android:layout_marginRight="5dp"
            android:layout_weight="0.50"
            android:textColor="#fff"
            android:text="PERSIJA JAKARTA"
            tools:ignore="RtlCompat" />
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:src="@drawable/persija"/>


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/textpersib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="170dp"
        android:layout_marginLeft="4dp"
        android:textAlignment="center"
        android:background="@color/biru"
        android:textSize="125sp"
        android:textColor="#fff"
        android:text="0" />

    <TextView
        android:id="@+id/strip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/textpersib"
        android:textSize="125sp"
        android:textColor="@color/colorAccent"
        android:text="-" />

    <TextView
        android:id="@+id/textpersija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="170dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/strip"
        android:background="@color/orange"
        android:textSize="125sp"
        android:textColor="#fff"
        android:text="0" />

        <Button
            android:id="@+id/btn_tambah_persib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_below="@+id/textpersib"
            android:textSize="20dp"
            android:theme="@style/biru"
            android:text="+"
            />
        <Button
            android:id="@+id/btn_kurang_persib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textpersib"
            android:layout_toRightOf="@+id/btn_tambah_persib"
            android:textSize="20dp"
            android:theme="@style/biru"
            android:text="-"
            />

        <Button
            android:id="@+id/btn_tambah_persija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:layout_below="@+id/textpersija"
            android:layout_toRightOf="@+id/btn_kurang_persib"
            android:theme="@style/orange"
            android:textSize="20dp"
            android:text="+"
            />
        <Button
            android:id="@+id/btn_kurang_persija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textpersija"
            android:layout_toRightOf="@+id/btn_tambah_persija"
            android:theme="@style/orange"
            android:textSize="20dp"
            android:text="-"
            />
    </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:textSize="20dp"
        android:theme="@style/hijau"
        android:text="RESET"/>
        <Button
            android:id="@+id/berita"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:textSize="20dp"
            android:theme="@style/hijau"
            android:text="BERITA"/>

    </LinearLayout>





</LinearLayout >






