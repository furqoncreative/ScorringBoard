<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="camp.bso.inf.scorringboard.PersibDetails">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:src="@drawable/persib"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/biru"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="PERSIB BANDUNG" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Pelatih : "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Roberto Carlos Mario Gomez"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Pemain : "
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/gk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pemain"
                android:layout_marginLeft="120dp"
                android:text="Goalkeepers"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gk"
                android:layout_marginLeft="90dp"
                android:text="M. Natshir Fadhil Mahbuby (1)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gk1"
                android:layout_marginLeft="90dp"
                android:text="Imam Arief Fadillah (25)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gk2"
                android:layout_marginLeft="90dp"
                android:text="I Made Wirawan (78)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gk3"
                android:layout_marginLeft="120dp"
                android:text="Defenders"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/df1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df"
                android:layout_marginLeft="90dp"
                android:text="Wildansyah (2)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df1"
                android:layout_marginLeft="90dp"
                android:text="Bojan Mališić (3)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df2"
                android:layout_marginLeft="90dp"
                android:text="Tony Sucipto (6)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df3"
                android:layout_marginLeft="90dp"
                android:text="Puja Abdillah (27)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df4"
                android:layout_marginLeft="90dp"
                android:text="Victor Igbonefo ( )"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df5"
                android:layout_marginLeft="90dp"
                android:text="Henhen Herdiana (21)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df6"
                android:layout_marginLeft="90dp"
                android:text="Supardi Nasir (22)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df7"
                android:layout_marginLeft="120dp"
                android:text="Midfielders"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mf1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf"
                android:layout_marginLeft="90dp"
                android:text="Michael Essien (5)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mf2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf1"
                android:layout_marginLeft="90dp"
                android:text="Atep (7)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mf3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf2"
                android:layout_marginLeft="90dp"
                android:text="Gian Zola (8)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mf4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf3"
                android:layout_marginLeft="90dp"
                android:text="Oh In-kyun (33
"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf4"
                android:gravity="center">
                <Button
                    android:id="@+id/sumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:theme="@style/hijau"
                    android:text="SUMBER"/>
                <Button
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:layout_below="@id/mf4"
                    android:theme="@style/hijau"
                    android:text="MAPS"/>

            </LinearLayout>


            <TextView
                android:id="@+id/mf6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_marginLeft="90dp"
                android:text="
"
                android:textSize="20dp" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>


