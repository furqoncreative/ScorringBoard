<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="camp.bso.inf.scorringboard.PersijaDetails">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:src="@drawable/persija"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/orange"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="PERSIJA JAKARTA" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Pelatih : "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Roberto Carlos Mario Gomez"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Pemain : "
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/gk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pemain"
                android:layout_marginLeft="120dp"
                android:text="Goalkeepers"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gk"
                android:layout_marginLeft="90dp"
                android:text="Andritany Ardhiyasa (26)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gk1"
                android:layout_marginLeft="90dp"
                android:text="Rizky Darmawan (30)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/gk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gk2"
                android:layout_marginLeft="90dp"
                android:text="Daryono (34)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gk3"
                android:layout_marginLeft="120dp"
                android:text="Defenders"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/df1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df"
                android:layout_marginLeft="90dp"
                android:text="Jaimerson da Silva Xavier (5)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df1"
                android:layout_marginLeft="90dp"
                android:text="Maman Abdurrahman (6)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df2"
                android:layout_marginLeft="90dp"
                android:text="Gunawan Dwi Cahyo (13)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df3"
                android:layout_marginLeft="90dp"
                android:text="Ismed Sofyan (14)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df4"
                android:layout_marginLeft="90dp"
                android:text="Valentino Telaubun 21)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df5"
                android:layout_marginLeft="90dp"
                android:text="Evraim Awes Toncy (24)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/df7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df6"
                android:layout_marginLeft="90dp"
                android:text="Rezaldi Hehanusa (22)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/df7"
                android:layout_marginLeft="120dp"
                android:text="Midfielders"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mf1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf"
                android:layout_marginLeft="90dp"
                android:text="Ramdani Lestaluhu (7)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mf2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf1"
                android:layout_marginLeft="90dp"
                android:text="Novri Setiawan (11)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mf3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf2"
                android:layout_marginLeft="90dp"
                android:text="Asri Akbar (16)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mf4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf3"
                android:layout_marginLeft="90dp"
                android:text="Arthur Barrios Bonai (22)
                "
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mf4"
                android:gravity="center">
                <Button
                    android:id="@+id/sumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:theme="@style/hijau"
                    android:text="SUMBER"/>
                <Button
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:layout_below="@id/mf4"
                    android:theme="@style/hijau"
                    android:text="MAPS"/>

            </LinearLayout>


            <TextView
                android:id="@+id/mf6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_marginLeft="90dp"
                android:text="
"
                android:textSize="20dp" />


        </RelativeLayout>
    </ScrollView>





</LinearLayout>
